            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <ImageView fx:id="imageView"
                   fitHeight="200.0"
                   fitWidth="200.0"
                   layoutX="61.0"
                   layoutY="83.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="1"
                   GridPane.columnSpan="3"
                   GridPane.halignment="CENTER">
            <Image url="@/title.png" />
        </ImageView>

        <Button fx:id="btn01" onAction="#prog01"
                text="Word Reversal"
                maxWidth="Infinity"
                GridPane.rowIndex="1"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"/>
        <Label GridPane.rowIndex="1" GridPane.columnIndex="3" text="Reverse words order."/>

        <Button fx:id="btn02" onAction="#prog02"
                text="Find the Word"
                maxWidth="Infinity"
                GridPane.rowIndex="2"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"/>
        <Label GridPane.rowIndex="2" GridPane.columnIndex="3" text="Retrieve specific word instance."/>

        <Button fx:id="btn03" onAction="#prog03"
                text="Word Search"
                maxWidth="Infinity"
                GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="1"/>
        <Label GridPane.rowIndex="3" GridPane.columnIndex="3" text="Retrieve repeated word instances."/>

        <Button fx:id="btn04" onAction="#prog04"
                text="Anagrams"
                maxWidth="Infinity"
                GridPane.rowIndex="4"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"/>
        <Label GridPane.rowIndex="4" GridPane.columnIndex="3" text="Check for mirrored characters use."/>

        <Button fx:id="btn05" onAction="#prog05"
                text="Pangrams"
                maxWidth="Infinity"
                GridPane.rowIndex="5"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"/>
        <Label GridPane.rowIndex="5" GridPane.columnIndex="3" text="Check for entire alphabet's characters use."/>

