                text="Armstrong Numbers"
                maxWidth="Infinity"
                GridPane.rowIndex="7"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"/>
        <Label GridPane.rowIndex="7" GridPane.columnIndex="3" text="Check for Armstrong number validity."/>

        <Button fx:id="btn08" onAction="#prog08"
                text="Product Maximizer"
                maxWidth="Infinity"
                GridPane.rowIndex="8"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"/>
        <Label GridPane.rowIndex="8" GridPane.columnIndex="3" text="Return pair of numbers with highest product."/>

        <Button fx:id="btn09" onAction="#prog09"
                text="Prime Number Checker"
                maxWidth="Infinity"
                GridPane.rowIndex="9"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"/>
        <Label GridPane.rowIndex="9" GridPane.columnIndex="3" text="Check validity and return a set of prime numbers."/>

        <Button fx:id="btn10" onAction="#prog10"
                text="Prime Factorization"
                maxWidth="Infinity"
                GridPane.rowIndex="10"
                GridPane.columnIndex="1"
                GridPane.columnSpan="1"/>
        <Label GridPane.rowIndex="10" GridPane.columnIndex="3" text="Return set of divisible factors."/>
    </GridPane>
    <HBox maxWidth="-Infinity" spacing="3.0">
        <Label text="Challenges taken from: https://www.codecademy.com/resources/blog/java-code-challenges-for-beginners/" />
